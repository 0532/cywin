- content_for(:title) do
  | 粉丝 - #{@user.name}

.profile.top-blank
  = render partial: 'users/head', locals: { type: :fun }

  .row
    .small-12.columns.funs
      - if @funs.blank?
        p.no-content
          | 暂无粉丝
      - else
        ul.small-block-grid-4.medium-block-grid-6.large-block-grid-8
          = render partial: 'users/funs/fun', collection: @funs
        = paginate @funs
